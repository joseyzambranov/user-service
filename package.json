{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User Service - Microservicio 1 para AWS Certified Developer Associate",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts infrastructure/**/*.ts",
    "lint:fix": "eslint src/**/*.ts infrastructure/**/*.ts --fix",
    "swagger:generate": "ts-node src/infrastructure/swagger/swaggerGenerator.ts",
    "cdk:synth": "cdk synth --app 'npx ts-node --project tsconfig.cdk.json infrastructure/bin/app.ts'",
    "cdk:deploy:dev": "cdk deploy UserServiceStack-Dev --app 'npx ts-node --project tsconfig.cdk.json infrastructure/bin/app.ts'",
    "cdk:deploy:prod": "cdk deploy UserServiceStack-Prod --app 'npx ts-node --project tsconfig.cdk.json infrastructure/bin/app.ts'",
    "cdk:destroy:dev": "cdk destroy UserServiceStack-Dev --app 'npx ts-node --project tsconfig.cdk.json infrastructure/bin/app.ts'",
    "sam:build": "pnpm run build && pnpm run cdk:synth",
    "sam:local:api": "sam local start-api -t cdk.out/UserServiceStack-Dev.template.json",
    "sam:local:invoke": "sam local invoke -t cdk.out/UserServiceStack-Dev.template.json",
    "clean": "rm -rf dist cdk.out coverage"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.2.0",
    "@aws-sdk/client-dynamodb": "^3.668.0",
    "@aws-sdk/lib-dynamodb": "^3.668.0",
    "aws-lambda": "^1.0.7",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "aws-cdk-lib": "^2.160.0",
    "constructs": "^10.3.0",
    "eslint": "^8.57.1",
    "globals": "^16.5.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  }
}
