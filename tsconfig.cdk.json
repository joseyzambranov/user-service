{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Override para CDK - permite includes m√°s amplios */
    "rootDir": ".",

    /* CDK necesita estos tipos */
    "types": ["node"],

    /* Permite importar archivos fuera de rootDir */
    "composite": false
  },
  "include": [
    "infrastructure/**/*"
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
